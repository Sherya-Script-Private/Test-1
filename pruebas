--// UI Cute Morado Astrar Style //
-- Creado por isabella (sherya) 💜

-- Variables
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Crear ScreenGui
local mainGui = Instance.new("ScreenGui")
mainGui.Name = "CuteMoraUI"
mainGui.Parent = PlayerGui
mainGui.ResetOnSpawn = false

-- Botón flotante con el logo cute
local toggleButton = Instance.new("ImageButton")
toggleButton.Name = "ToggleButton"
toggleButton.Size = UDim2.new(0, 80, 0, 80)
toggleButton.Position = UDim2.new(0, 20, 0.5, -40)
toggleButton.BackgroundTransparency = 1
toggleButton.Image = "rbxassetid://1234567890" -- Aquí va el ID de tu logo cute
toggleButton.Parent = mainGui

-- Frame principal (interfaz)
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 600, 0, 400)
mainFrame.Position = UDim2.new(0.5, -300, 0.5, -200)
mainFrame.BackgroundColor3 = Color3.fromRGB(106, 13, 173) -- Morado fuerte
mainFrame.Visible = false
mainFrame.Parent = mainGui

-- Degradado morado claro
local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(106, 13, 173)), -- Morado fuerte
    ColorSequenceKeypoint.new(1, Color3.fromRGB(177, 156, 217)) -- Morado clarito
}
gradient.Rotation = 90
gradient.Parent = mainFrame

-- Bordes redondeados
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 10)
corner.Parent = mainFrame

-- Barra lateral
local sidebar = Instance.new("Frame")
sidebar.Size = UDim2.new(0, 150, 1, 0)
sidebar.BackgroundColor3 = Color3.fromRGB(85, 0, 140) -- Morado oscuro
sidebar.Parent = mainFrame

local sidebarCorner = Instance.new("UICorner")
sidebarCorner.CornerRadius = UDim.new(0, 10)
sidebarCorner.Parent = sidebar

-- Ejemplo de botón en la barra lateral
local tabButton = Instance.new("TextButton")
tabButton.Size = UDim2.new(1, -20, 0, 40)
tabButton.Position = UDim2.new(0, 10, 0, 20)
tabButton.BackgroundColor3 = Color3.fromRGB(177, 156, 217) -- Morado claro
tabButton.Text = "Glitching"
tabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
tabButton.Parent = sidebar

local tabCorner = Instance.new("UICorner")
tabCorner.CornerRadius = UDim.new(0, 6)
tabCorner.Parent = tabButton

-- Área de contenido
local contentFrame = Instance.new("Frame")
contentFrame.Size = UDim2.new(1, -150, 1, 0)
contentFrame.Position = UDim2.new(0, 150, 0, 0)
contentFrame.BackgroundTransparency = 1
contentFrame.Parent = mainFrame

-- Función para alternar visibilidad
toggleButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = not mainFrame.Visible
end)

-- Ejemplo de acción al presionar un tab
tabButton.MouseButton1Click:Connect(function()
    print("Aquí va el script de Glitching 💜")
end)
